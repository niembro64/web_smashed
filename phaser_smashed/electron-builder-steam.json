{
  "appId": "com.phaser.smashed",
  "productName": "Phaser Smashed",
  "files": [
    "build/**/*",
    "node_modules/**/*",
    "public/electron.js",
    "public/preload.js",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "steam_api/",
      "to": "steam_api",
      "filter": ["**/*"]
    },
    {
      "from": "assets/",
      "to": "assets",
      "filter": ["**/*"]
    }
  ],
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true
  },
  "publish": null
}